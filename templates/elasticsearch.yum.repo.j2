[elasticsearch-{{ elasticsearch_major_version }}.x]
name=Elasticsearch repository for {{ elasticsearch_major_version }}.x packages
{% if elasticsearch_major_version|int >= 5 %}
baseurl={{ elasticsearch_yum_repo_baseurl }}
gpgcheck=1
gpgkey={{ elasticsearch_signing_key_url }}
enabled=1
autorefresh=1
type=rpm-md
{% else %}
baseurl={{ elasticsearch_2_yum_repo_baseurl }}
gpgcheck=1
gpgkey={{ elasticsearch_signing_key_url }}
enabled=1
{% endif %}
